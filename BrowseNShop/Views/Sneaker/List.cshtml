@using BrowseNShop.ViewModels
@model SneakerListViewModel



<div>
    <h2>All sneakers and boots are displayed here </h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{ 
    foreach (var sneak in Model.Sneakers)
    {
        <div class="col-sm-4-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@sneak.ImageThumbnailUrl" alt="" />
                <div class="caption">
                    <h3 class="pull-right">@sneak.Price $</h3>
                    <h3><a>@sneak.Name</a></h3>
                    <p>@sneak.ShortDescription</p>
                </div>
                
            </div>
            



        </div>
    }
}



