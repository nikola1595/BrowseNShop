@using BrowseNShop.ViewModels
@model SneakerListViewModel



<div>
    <h2>All sneakers and boots are displayed here </h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{ 
    foreach (var sneak in Model.Sneakers)
    {
        <div>
            <h4> Sneaker name: @sneak.Name</h4>
            <p>Price: @sneak.Price $</p>



        </div>
    }
}


