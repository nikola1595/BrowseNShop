@model Sneaker

<div class="col-sm-4-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right"> $@Model.Price</h3>
            <h4>
            <a asp-controller="Sneaker" asp-action="Details" asp-route-SneakerID="@Model.SneakerID">@Model.Name</a>
            </h4>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-sneakerID="@Model.SneakerID">
                   Add to cart
                </a>
            </p>
        </div>

    </div>

</div>